{
    "name": "axel-kummer/logbook-demo",
    "description": "Logbook demo project",
    "type": "project",
    "repositories": [
        {
            "type": "github",
            "url": "git@github.com:aseemann/php-livelog.git"
        }
    ],
    "require": {
        "typo3/cms": "8.7.*",
        "typo3/cms-introduction": "^3.0",
        "aseemann/php-livelog": "dev-master"
    },
    "authors": [
        {
            "name": "Axel Kummer",
            "email": "kummeraxel@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "docroot"
        }
    },
    "config": {
        "platform": {
            "php": "7.2.34"
        },
        "preferred-install": {
            "aseemann/*": "source"
        }
    },
    "prefer-stable" : true,
    "scripts": {
        "set-symlinks": [
            "ln -sfT ../vendor/aseemann/php-livelog/web docroot/livelog",
            "ln -sfT docroot html"
        ],
        "post-install-cmd": [
            "@set-symlinks"
        ],
        "post-update-cmd": [
            "@set-symlinks"
        ]
    }
}
